{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",

  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",


  "endOfLine": "auto",
  "quoteProps": "as-needed",

  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,

  "proseWrap": "always",

  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
